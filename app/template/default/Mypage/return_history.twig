{% extends 'default_frame.twig' %}
{% set mypageno = 'return_history' %}
{% set body_class = 'mypage' %}

{% block stylesheet %}
    <style>
	</style>
{% endblock stylesheet %}

{% block main %}
	<div class="ec-layoutRole__main">
		<div class="ec-mypageRole">
			<div class="ec-pageHeader">
				<h1>{{ "front.mypage.title" | trans }}/{{"front.mypage.nav_return_history_product" | trans}}</h1>
			</div>
			{% include 'Mypage/navi.twig' %}
		</div>
		<div class="ec-mypageRole">
			{% if pagination and pagination.totalItemCount > 0 %}
				<p class="ec-para-normal">
					{{ 'front.mypage.history_count'|trans({'%count%':pagination.totalItemCount}) }}
				</p>
			{% endif %}

			<table class="table myTable">
				<thead>
					<tr>
						<th title="return_no">
							<p class="text-nowrap">{{ "front.mypage.history.return_no" | trans | raw }}</p>
						</th>
						<th title="return_request_date">
							<p class="text-nowrap">{{ "front.mypage.history.return_request_date" | trans | raw }}</p>
						</th>
						<th title="reason_return">
							<p class="text-nowrap">{{ "front.mypage.history.reason_return" | trans | raw }}</p>
						</th>
						<th title="return_status">
							<p class="text-nowrap">{{ "front.mypage.history.return_status" | trans | raw }}</p>
						</th>
						<th title="shipping_no">
							<p class="text-nowrap">{{ "front.mypage.history.shipping_no" | trans | raw }}</p>
						</th>
						<th title="shipping_date">
							<p class="text-nowrap">{{ "front.mypage.history.shipping_date" | trans | raw }}</p>
						</th>
						<th title="shiping_code | otodoke_code">
							<p class="text-nowrap">{{ "front.mypage.history.shiping_code" | trans | raw }}</p>
							<p class="text-nowrap">{{ "front.mypage.history.otodoke_code" | trans | raw }}</p>
						</th>
						<th title="jan_code | product_name">
							<p class="text-nowrap">{{ "front.mypage.history.jan_code" | trans | raw }}</p>
							<p class="text-nowrap">{{ "front.mypage.history.product_name" | trans | raw }}</p>
						</th>
						<th title="shipping_num">
							<p class="text-nowrap">{{ "front.mypage.history.shipping_num" | trans | raw }}</p>
						</th>
						<th title="return_number">
							<p class="text-nowrap">{{ "front.mypage.history.return_number" | trans | raw }}</p>
						</th>
					</tr>
				</thead>
				{% if pagination and pagination.totalItemCount > 0 %}
					<tbody>
						{% for item in pagination %}
							<tr>
								<td title="return_no">
									<p class="text-nowrap">{{ item.returns_no }}</p>
								</td>
								<td title="return_request_date">
									<p class="text-nowrap">{{ item.shipping_date|date('Y-m-d')}}</p>
								</td>
								<td title="reason_return">
									<p class="text-nowrap">{{ item.returns_reson }}</p>
								</td>
								<td title="return_status">
									<p class="text-nowrap"></p>
								</td>
								<td title="shipping_no">
									<p class="text-nowrap">{{ item.shipping_no }}</p>
								</td>
								<td title="shipping_date">
									<p class="text-nowrap">{{ item.shipping_date|date('Y-m-d') }}</p>
								</td>
								<td title="shiping_code | otodoke_code">
									<p class="text-nowrap">{{ item.shipping_name }}</p>
									<p class="text-nowrap">{{ item.otodoke_name }}</p>
								</td>
								<td title="jan_code | product_name">
									<p class="text-nowrap">{{ item.jan_code }}</p>
									<p class="text-nowrap">{{ item.product_code }}</p>
								</td>
								<td title="shipping_num">
									<p class="text-nowrap">{{ item.shipping_num }}</p>
								</td>
								<td title="return_number">
									<p class="text-nowrap">{{ item.returns_num }}</p>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				{% else %}
					<tbody>
						<tr>
							<td colspan="8">
								<p>返品手続きの履歴がありません。</p>
							</td>
						</tr>
					</tbody>
				{% endif %}
			</table>

			{% if pagination and pagination.totalItemCount > 0 %}
				<div class="ec-pagerRole">
					{% include "pager.twig" with {'pages': pagination.paginationData} %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock main%}

{% block javascript %}
<script>
	
</script>
{% endblock %}
