        {{ render(path('block_' ~ Block.file_name)) }}
    {% else %}
        {% if Block.file_name == 'topCategory' %}
            {% if is_granted('ROLE_USER') %}
                {{ include_dispatch('Block/' ~ Block.file_name ~ '.twig') }}
            {% endif %}
        {% else %}
            {{ include_dispatch('Block/' ~ Block.file_name ~ '.twig') }}
        {% endif %}
    {% endif %}
    <!-- ▲{{ Block.name }} -->
{% endfor %}
