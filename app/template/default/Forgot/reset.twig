{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>{{ 'front.forgot.title'|trans }}</h1>
        </div>
        <div class="ec-off1Grid">
            <div class="ec-off1Grid__cell">
                <form id="form1" method="post" novalidate>
                    {{ form_widget(form._token) }}
                    <div class="ec-borderedDefs">
                        <dl>
                            <dt>
                                <label class="ec-label required" for="login_email">{{ 'common.mail_address'|trans }}</label>
                            </dt>
                            <dd>
                                <div class="ec-input">
                                    <div class="ec-input{{ has_errors(form.user_code) ? ' error' }}">
                                        {{ form_widget(form.user_code, {'value' : userCode ?? ''}) }}
                                        {{ form_errors(form.user_code) }}
                                    </div>
                                </div>
                            </dd>
                        </dl>
                        {% if userCode %}
                            <dl>
                                <dt>
                                    <label class="ec-label required" for="login_email">メール</label>
                                </dt>
                                <dd>
                                    <div class="ec-input{{ has_errors(form.login_email) ? ' error' }}">
                                        {{ form_widget(form.login_email, {'value' : email ?? ''}) }}
                                        {{ form_errors(form.login_email) }}
                                        {% if error %}
                                            <p class="ec-errorMessage">{{ error }}</p>
                                        {% endif %}
                                    </div>
                                </dd>
                            </dl>
                            <dl>
                                <dt>
                                    {{ form_label(form.password, 'common.password', { 'label_attr': {'class': 'ec-label' }}) }}
                                </dt>
                                <dd>
                                    <div class="ec-input{{ has_errors(form.password.first) ? ' error' }}">
                                        {{ form_widget(form.password.first, {
                                            'attr': { 'placeholder': 'common.password_sample'|trans({ '%min%': eccube_config.eccube_password_min_len, '%max%': eccube_config.eccube_password_max_len }) },
                                            'type': 'password'
                                        }) }}
                                        {{ form_errors(form.password.first) }}
                                    </div>
                                    <div class="ec-input{{ has_errors(form.password.second) ? ' error' }}">
                                        {{ form_widget(form.password.second, {
                                            'attr': { 'placeholder': 'common.repeated_confirm'|trans },
                                            'type': 'password'
                                        }) }}
                                        {{ form_errors(form.password.second) }}
                                    </div>
                                </dd>
                            </dl>
                        {% endif %}
                    </div>
                    <div class="ec-registerRole__actions">
                        <div class="ec-off4Grid">
                            <div class="ec-off4Grid__cell">
                                <button class="ec-blockBtn--action" type="submit">{{ 'common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheet %}
    <style>
        .swal-modal {
            width: 35vw;
        }
    </style>
{% endblock %}

{% block javascript %}
<script>
    var email           = "{{ email }}" ;
    var master_email    = "{{ master_email }}" ;
    var user_code       = "{{ userCode }}" ;

    if (!user_code) {
        swal("エラー", "「顧客関連情報が登録されていません」\n 「弊社営業担当者にお問い合わせください」を表示", "error");

        setTimeout(function() {
            window.location.href = '/';
        }, 5000);
    }

    if (!email || email != master_email) {
        swal("エラー", "「メールアドレスが登録されていません」\n「弊社営業担当者にお問い合わせください」を表示\n" + master_email, "error");

        setTimeout(function() {
            window.location.href = '/';
        }, 5000);
    }
</script>
{% endblock %}

